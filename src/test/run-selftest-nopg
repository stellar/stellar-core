BASE_INSTANCE="$1"
TESTS="$2"

if [[ "$ALL_VERSIONS" != "" ]]; then
    ./stellar-core -ll fatal --test --base-instance $BASE_INSTANCE --all-versions -a -r simple "$TESTS" 2> /dev/null
else
    ./stellar-core -ll fatal --test --base-instance $BASE_INSTANCE -a -r simple "$TESTS" 2> /dev/null
fi
